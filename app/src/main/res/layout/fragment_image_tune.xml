<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayoutTune"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tab_text_press_color"
        app:tabTextAppearance="@style/MyCustomTextAppearance"
        app:tabTextColor="@color/white" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/tvTuneProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />

        <com.kessi.textarts.views.CustomSeekBar
            android:layout_gravity="center"
            android:id="@+id/seekbar_tune"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@android:color/transparent"
            android:progressBackgroundTint="@color/tab_text_press_color"
            android:thumbTint="@color/tab_text_press_color" />
    </LinearLayout>
</LinearLayout>
