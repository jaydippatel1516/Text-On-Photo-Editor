<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TextOnPhotoEditor" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">@color/main_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#9a0d0d21</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/mainactivity1</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="Theme.TextOnPhotoEditor" parent="Base.Theme.TextOnPhotoEditor" />

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/main_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#9a0d0d21</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/mainactivity1</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="TextBelowImage" parent="@android:style/Widget.TextView">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_selector</item>
    </style>

    <style name="EditText">
        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlActivated">#ffffffff</item>
        <item name="colorControlNormal">#ffffffff</item>
    </style>

    <style name="MyCustomTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ActionButton">
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:minWidth">@dimen/action_button_min_width_material</item>
        <item name="android:minHeight">@dimen/action_button_min_height_material</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
</resources>